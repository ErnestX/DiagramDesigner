<Window x:Class="DiagramDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiagramDesigner"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <DockPanel>
        <StackPanel Orientation="Vertical" Width="300" DockPanel.Dock="Left" Background="LemonChiffon">
            <Button Content="Start Drawing" Width="60" HorizontalAlignment="Center" Margin="10,10,10,10" Command="{Binding StartDrawingCommand}"/>
            <Button Content="End Drawing" Width="60" HorizontalAlignment="Center" Margin="10,10,10,10" Command="{Binding EndDrawingCommand}"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Width="300" DockPanel.Dock="Right" Background="LightGray">
            <DataGrid></DataGrid>
        </StackPanel>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Height="50" DockPanel.Dock="Bottom" Background="Azure">
            <TextBlock Text="cursor location x y" VerticalAlignment="Center" Margin="10,10,10,10"></TextBlock>
        </StackPanel>
        <local:DiagramRenderingCanvas x:Name="PrimaryDiagramCanvas" ></local:DiagramRenderingCanvas>
    </DockPanel>
</Window>
