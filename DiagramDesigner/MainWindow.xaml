<Window x:Class="DiagramDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiagramDesigner"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <DockPanel>
        <StackPanel Width="300" DockPanel.Dock="Left" Background="Aqua">
            <Button Content="Run Test" Width="60" HorizontalAlignment="Center" Margin="10,10,10,10" Command="{Binding TestCommand}"/>    
        </StackPanel>
        <local:DiagramRenderingCanvas x:Name="primaryDiagramCanvas" Command="{Binding HandleMouseClick}"></local:DiagramRenderingCanvas>
    </DockPanel>
</Window>
