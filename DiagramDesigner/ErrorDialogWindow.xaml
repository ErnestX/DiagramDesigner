<Window x:Class="DiagramDesigner.ErrorPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiagramDesigner"
        mc:Ignorable="d"
        Closing="Window_Closing"
        MinHeight="200"
        MinWidth="300"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="10">
        <StackPanel>
            <TextBlock Name="Title" Text="Untitled" FontSize="15" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="10,20,10,10"></TextBlock>
            <TextBlock Name="ErrorMessage" Text="Empty Error Message" FontSize="12" HorizontalAlignment="Center" TextWrapping="Wrap" Height="50" Margin="10,10,10,10"></TextBlock>
        </StackPanel>
        <Button Name="CloseButton" Content="Close" Width="70" Height="25" HorizontalAlignment="Center" Margin="10,10,10,10" Command="{Binding CloseWindow}"/>
    </StackPanel>
</Window>
